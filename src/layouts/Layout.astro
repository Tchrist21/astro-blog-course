---
import "@fontsource/handlee";
import Header from '../components/Header.astro';
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
	description?: string;
	image?: string
}

const { title, description = "A place to find your next lesbian book read", image = "/images/books.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name={description} content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions/>
		<title>{title}</title>
	</head>
	<body class="font-serif min-h-screen bg-blue-100">
		<Header/>
		<slot />
	</body>
</html>
